<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="385dp"
        android:layout_height="96dp"
        android:src="@drawable/logon_bac"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/smile"/>

            <EditText
                android:id="@+id/name_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="学号"
                android:inputType="textVisiblePassword"
                android:textCursorDrawable="@null"/>


        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:background="@color/grey_logon"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/password_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="密码"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:textCursorDrawable="@null"/>


        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="10dp"
            android:background="@color/grey_logon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/captcha_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/captcha"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/captcha"/>

            <EditText
                android:id="@+id/captcha_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="验证码"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textCursorDrawable="@null"/>


        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="150dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/captcha"
            android:layout_marginTop="10dp"
            android:background="@color/grey_logon"/>

        <ImageView
            android:id="@+id/captcha_img"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/captcha"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        >

        <Button
            android:id="@+id/logon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:visibility="visible"
            />

        <com.example.hao.hbut.View.widget.ENRefreshView
            android:id="@+id/refresh_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:refresh_line_color="@color/colorPrimary"
            app:refresh_line_width="12"
            />

    </FrameLayout>


</LinearLayout>